{
  "name": "blitz-for-league-only",
  "productName": "Blitz for League Only",
  "version": "1.0.1",
  "description": "Open and Close Blitz based on the status of League Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --windows",
    "release": "electron-builder --windows --publish always"
  },
  "build": {
    "appId": "com.hybes.blitz-for-league-only",
    "win": {
      "artifactName": "Blitz for League ONLY Installer - ${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    },
    "publish": [{
      "provider": "github",
      "owner": "Hybes",
      "repo": "blitz-for-league-only"
    }]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3"
  }
}
